{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2019"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
